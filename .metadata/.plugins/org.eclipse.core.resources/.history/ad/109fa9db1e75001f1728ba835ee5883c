package defult;

import java.util.Locale;
import java.util.Scanner;

public class FormulaDeHeron {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		double A01, B01, C01, A02, B02, C02;
		
		System.out.println("Digite as medidade do triângulo 1:");
		System.out.print("Lado A: "); A01 = sc.nextDouble();
		System.out.print("Lado B: "); B01 = sc.nextDouble();
		System.out.print("Lado C: "); C01 = sc.nextDouble();
		System.out.println();
		System.out.println("Digite as medidade do triângulo 2:");
		System.out.print("Lado A: "); A02 = sc.nextDouble();
		System.out.print("Lado B: "); B02 = sc.nextDouble();
		System.out.print("Lado C: "); C02 = sc.nextDouble();
		
		double p = (A01 + B01 + C01) / 2.0; 
		double area01 = Math.sqrt(p * (p - A01) * (p - B01) * (p - C01));
		
		p = (A02 + B02 + C02) / 2.0;
		double area02 = Math.sqrt(p * (p - A02) * (p - B02) * (p - C02));
		System.out.println();
		System.out.printf("Área do triângulo 1: %.4f%n",area01);
		System.out.printf("Área do triângulo 2: %.4f%n",area02);
		System.out.println();
		if (area01 > area02) {
			System.out.println("Maior área: Triângulo 1");
		} else {
			System.out.println("Maior área: Triângulo 2");
		}
		
		sc.close();
	}
}